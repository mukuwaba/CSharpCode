//This program will prompt the user for five integers and report back the sum. 

using System;
using static System.Console;

public class SumFiveInts{
    public static void Main(string[] args){
        
        
        string numString;
        int sum = 0;
        int numAsInt;

        //Prompt user for integers
        Console.WriteLine ("Please enter five integers.");
        
        for(int i = 0; i<5; i++){
            
            Console.WriteLine("Enter integer: ");
            numString = ReadLine();
            numAsInt = Convert.ToInt32(numString);
            
            //Total value and store in "sum"
            sum = sum + numAsInt;
            
        }//End: for
        
        //Report sum back to user
         Console.WriteLine("The sum of the 5 integers is: " + sum);
        
        
    }//End:main
}//End:class
